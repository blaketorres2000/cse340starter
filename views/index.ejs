<!-- Page content -->
<h1>CSE Motors!</h1>
<div class="success-message">
    <%- messages() %>
</div>
<div class="welcome-user">
    <% if (loggedin) { %>
        <h2 class="man-inv-heading">Welcome <%= account_firstname %>
        </h2>

        <div class="manage-links-group">
            <div class="manage-link">
                <h3>Manage Account</h3>
                <a href="/account/manage<%= accountData.id %>">
                    <p>Click Here</p>
                </a>
            </div>

            <% if (accountData.account_type==="Employee" || accountData.account_type==="Admin" ) { %>
                <div class="manage-link">
                    <h3>Manage Inventory</h3>
                    <a href="/inv/">
                        <p>Click Here</p>
                    </a>
                </div>
                <% } %>
                    <% } else { %>
                        <h2>Welcome</h2>
                        <% } %>
        </div>
</div>
<div class="pic-text-container">
    <div id="text-container">
        <h2>DMC Delorean</h2>
        <p>3 Cup holders</p>
        <p>Superman doors</p>
        <p>Fuzzy dice!</p>
        <button>Own Today</button>
    </div>
    <div class="image-wrapper">
        <img id="car" src="images/vehicles/delorean.jpg" alt="Delorean">
    </div>
</div>
<div class="bottom-half-container">
    <div id="reviews-container">
        <h2>DMC Delorean Reviews</h2>
        <ul>
            <li>"So fast it's almost like traveling in time." (4/5)</li>
            <li>"Coolest ride on the road." (4/5)</li>
            <li>"I'm feeling McFly!" (5/5)</li>
            <li>"The most futuristic ride of our day." (4.5/5)</li>
            <li>"80's livin and I love it!" (5/5)</li>
        </ul>
    </div>
    <div id="table-container">
        <h2>Delorean Upgrades</h2>
        <div class="image-grid">
            <a href="#" class="upgrade-item">
                <img src="images/upgrades/flux-cap.png" alt="Flux Capacitor">
                <br>
                Flux Capacitor
            </a>
            <a href="#" class="upgrade-item">
                <img src="images/upgrades/flame.jpg" alt="Flame Decals">
                <br>
                Flame Decals
            </a>
            <a href="#" class="upgrade-item">
                <img src="images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
                <br>
                Bumper Stickers
            </a>
            <a href="#" class="upgrade-item">
                <img src="images/upgrades/hub-cap.jpg" alt="Hub Caps">
                <br>
                Hub Caps
            </a>
        </div>
    </div>
</div>